# AI 服务配置（仅支持 DeepSeek 思考模式）
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# 应用配置
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# 数据库配置
DATABASE_URL=sqlite:///./agent_sandbox.db

# 沙箱配置
SANDBOX_BASE_DIR=./sandboxes
MAX_SANDBOX_SIZE_MB=100
MAX_FILE_SIZE_MB=1

# Agent Loop 配置
ENABLE_AGENT_LOOP=true
TOOL_EXECUTION_TIMEOUT=30
MAX_TOOL_CALLS_PER_MESSAGE=10

# 消息截取配置
MAX_USER_INPUT_LENGTH=1000
MAX_HISTORY_MESSAGES=20
ENABLE_MESSAGE_TRUNCATION=true
TRUNCATION_WARNING_MESSAGE=...(消息已截取)

# 代码质量检查（可选）
# 如果不安装这些工具，check工具会自动跳过
# 安装方法：
# - HTML检查: brew install tidy-html5 (macOS) 或 apt-get install tidy (Linux)
# - CSS检查: npm install -g stylelint
# - JS检查: npm install -g eslint
